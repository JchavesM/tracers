{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:eslint/all",
    "plugin:react/all",
    "plugin:jest/all",
    "plugin:fp/recommended",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "parser": "eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks",
    "fp",
    "prettier",
    "jest"
  ],
  "root": true
}
